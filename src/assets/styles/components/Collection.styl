.collection
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  margin: 70px 10%

  /* Header */
  &__header
    width: 100%
    display: flex
    flex-direction: column
    align-items: center

    &-title
      width: 100%
      display: flex
      justify-content: center
      align-items: baseline
      text-align: center

      span
        width: 100%
        margin: 20px 0 10px
        border-bottom: 2px solid $color-black
        opacity: 0.1

      h2
        position: absolute
        padding:0 30px
        font-family: $didot
        text-transform: uppercase
        font-size: $section-title
        letter-spacing: 2px
        text-align: center
        background: $color-white

    &-description
      margin-top: 45px
      display: flex
      justify-content: center
      width: 620px
      font-family: $poppins
      font-size: $section-content
      font-weight: 400
      letter-spacing: 2px
      text-align: center

  /* Card Container */
  &__cards
    margin: 80px 0
    display: flex
    justify-content: center
    flex-wrap: wrap
    width: 100%
    gap: 15px

    ul
      display: flex
      justify-content: center
      flex-wrap: wrap
      width 100%
      gap 15px

    &-item
      display: flex
      flex-direction: column
      justify-content: space-between
      align-items: center
      padding: 100px 20px 50px
      width: 28%
      height: 500px
      text-align: center
      border-radius: 2px
      box-shadow-medium()

      &-img
        width: 60%

      &-content
        display: flex
        flex-direction: column
        align-items: center
        margin-top: 70px
        height: 100%

        h3
          font-family: $didot
          text-transform: uppercase
          font-size: $section-subtitle
          letter-spacing: 2px

        span
          width: 65%
          margin: 30px 0 35px
          border-bottom: 1px solid $color-black
          opacity: 0.1

        p
          font-family: $poppins
          font-size: $section-content
          font-weight: 300
          letter-spacing: 1.5px

  /* Button */
  &__button
    button($color-white, $color-black, $color-black)

/* Desktop */
@media only screen and (min-width: 1920px)
  .collection__cards-item
    height: 600px
